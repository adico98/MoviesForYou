<Application x:Class="MovieRenter.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:MovieRenter"
             xmlns:vm="clr-namespace:MovieRenter.ViewModels"
             xmlns:v="clr-namespace:MovieRenter.Views"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <DataTemplate DataType="{x:Type vm:UsersReviewsViewModel}">
            <v:UsersReviewsView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:EntranceViewModel}">
            <v:EntranceView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:MoviesViewModel}">
            <v:MoviesView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:UsersViewModel}">
            <v:UsersView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:SelectedMovieViewModel}">
            <v:SelectedMovieView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:RentedMoviesViewModel}">
            <v:RentedMoviesView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:ReportsViewModel}">
            <v:ReportsView/>
        </DataTemplate>
    </Application.Resources>
</Application>
