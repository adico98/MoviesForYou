<Window x:Class="MovieRenter.Views.DeleteReviewReason"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MovieRenter.Views"
             mc:Ignorable="d" 
             Height="250" Width="200" ResizeMode="NoResize"  WindowStartupLocation="CenterOwner" WindowStyle="ToolWindow">
    <Grid Background="AliceBlue">
        <StackPanel>
            <TextBlock Text="Reason:" FontSize="16" FontWeight="Bold"/>
            <TextBox Width="195" Height="150" x:Name="TxtReason" TextWrapping="Wrap" ></TextBox>
            <Button Height="40" Width="80" HorizontalAlignment="Right" Content="Save" Click="Save_Reason"/>
        </StackPanel>
    </Grid>
</Window>
